<?xml version="1.0" encoding="utf-8" ?>
<resources>
	<style name="MainTheme" parent="MainTheme.Base">
	</style>
	<!-- Base theme applied no matter what API -->
	<style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
		<item name="windowNoTitle">true</item>
		<!--We will be using the toolbar so no need to show ActionBar-->
		<item name="windowActionBar">false</item>
		<!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
		<!-- colorPrimary is used for the default action bar background -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<!-- colorPrimaryDark is used for the status bar -->
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
		<item name="colorAccent">@color/colorPrimary</item>
		<!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
		<item name="windowActionModeOverlay">true</item>
	</style>

	<!-- All dialogs -->
	<style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:colorAccent">@color/colorAccent</item>
	</style>

	<!-- Custom theme for the splash screen -->
	<style name="SplashTheme" parent ="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowBackground">@drawable/splash_screen</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
	</style>

	<!-- Custom theme for the text and TextEdit field -->
	<style name="textandroid_style_regular" parent="ThemeOverlay.AppCompat">
		<!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
		<item name="android:hint">@color/colorPrimaryDark</item>
		<item name="android:textColor">@color/uom_purple</item>
	</style>
	
	<style name="AndroidMapTheme" parent="MainTheme">
		<item name="android:windowNoTitle">false</item>
		<item name="android:windowActionBar">true</item>
	</style>
	
	<!-- Custom theme for the Map Activity <item name="android:titleTextStyle">@style/actionbarandroid_style</item> -->
	<style name="AndroidMapThemey" parent="MainTheme">
		<item name="android:windowNoTitle">false</item>
		<item name="android:windowActionBar">true</item>
		<item name="android:actionBarStyle">@style/MyActionBarTitle</item>
		<item name="actionBarStyle">@style/MyActionBarTitle</item>
		<item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
		<item name="titleTextStyle">@style/MyActionBarTitleText</item>
		<!-- this is wrong need to look Textcolor
		<item name="android:actionbar style point to above....eColor">@color/White</item> -->	
	</style>
	
	<!-- Custom theme for the Map Activity <item name="android:titleTextStyle">@style/actionbarandroid_style</item> -->	
	<style name="AndroidMapThemex" parent="MainTheme">
		<item name="android:windowNoTitle">false</item>
		<item name="android:windowActionBar">true</item>
		<item name="android:actionBarStyle">@style/MyActionBarTitle</item>
		<item name="actionBarStyle">@style/MyActionBarTitle</item>
		<item name="android:titleTextStyle">@style/MyActionBarTitle</item>
		<item name="titleTextStyle">@style/MyActionBarTitle</item>
		<!-- this is wrong need to look Textcolor
		<item name="android:actionbar style point to above....eColor">@color/White</item>
		-->
	</style>
	
	<style name="MyActionBarTitle" parent="@style/Widget.AppCompat.ActionBar">
		<item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
		<item name="titleTextStyle">@style/MyActionBarTitleText</item>
	</style>
	
	<style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@color/white</item>		
		<item name="android:background">@color/uom_purple</item>
		<item name="background">@color/uom_purple</item>
	</style>
	
	<style name="actionbarandroid_style" parent="AndroidMapTheme">
		<item name="android:titleTextStyle">@style/MyTitleTextStyle</item>
		<item name="android:subtitleTextStyle">@style/MyTitleTextStyle</item>
		<item name="titleTextStyle">@style/MyTitleTextStyle</item>
		<item name="subtitleTextStyle">@style/MyTitleTextStyle</item>
	</style>
	
	<style name="MyTitleTextStyle" parent="@android:style/TextAppearance">
		<item name="android:textColor">@color/uom_purple</item>
	</style>
	
	<style name="actionbarandroid_stylex">
		<item name="android:titleTextStyle">@style/actionbartextandroid_style</item>
	</style>
	
	<style name="actionbartextandroid_style">
		<item name="android:subtitleTextStyle">@style/actionbarsubtitleandroid_style</item>
	</style>
	
	<style name="actionbarsubtitleandroid_style">
		<item name="android:subtitleTextStyle">@color/uom_purple</item>
	</style>
	
	
	<style name="btnandroid_style_regular">	
		<item name="android:textColor">@color/uom_purple</item>
		<item name="android:background">@drawable/ic_button_test</item>
		<item name="android:textSize">@dimen/textSize_small</item>

	</style>
	<style name="btnandroid_style_regularbak">
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_margin">@dimen/margin_large</item>
		<item name="android:background">@drawable/ic_button_test</item>
		<item name="android:padding">@dimen/padding_small</item>
		<item name="android:textSize">@dimen/textSize_small</item>

	</style>
</resources>

